generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EndpointMonitor {
  id               String        @id @default(cuid())
  name             String
  url              String
  method           String        @default("GET")
  headers          String?       // JSON stored as string
  body             String?
  frequency        Int           @default(60) // in seconds
  timeout          Int           @default(5000) // in ms
  retryCount       Int           @default(0)
  retryInterval    Int           @default(0) // in ms
  successCodes     String        @default("[200]") // JSON array stored as string
  status           String        @default("unknown")
  statusCode       Int?
  latencyMs        Int?
  lastCheck        DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  monitoringEnabled Boolean      @default(true)
  uptimeChecks     UptimeCheck[]

  @@index([status])
}

model UptimeCheck {
  id                String          @id @default(cuid())
  endpointMonitorId String
  timestamp         DateTime        @default(now())
  status            String
  statusCode        Int?
  latencyMs         Int?
  error             String?
  endpointMonitor   EndpointMonitor @relation(fields: [endpointMonitorId], references: [id], onDelete: Cascade)

  @@index([endpointMonitorId])
  @@index([timestamp])
}